# =================================
# Backend Environment Configuration
# =================================

# Server Configuration
PORT=8080
ENV=development
LOG_LEVEL=debug
LOG_PRETTY=true

# Database Configuration
# Option 1: Individual database variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ytclipper_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# Option 2: Full database URL (alternative to above)
# DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Configuration
JWT_SECRET=development_jwt_secret_min_32_characters
JWT_EXPIRY=24h

# Authentication Configuration
AUTH_JWT_SECRET=development_auth_secret_min_32_characters
AUTH_JWT_EXPIRY_HOURS=72
AUTH_PASSWORD_RESET_EXPIRY=24h
AUTH_TOKEN_ISSUER=ytclipper-app-dev

# API Configuration
API_TIMEOUT=30s
API_RATE_LIMIT=1000

# Monitoring (disabled in development)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Production values (change these for production)
# ENV=production
# LOG_LEVEL=info
# LOG_PRETTY=false
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=ytclipper
# JWT_SECRET=your_production_jwt_secret_here_min_32_characters
# AUTH_JWT_SECRET=your_production_auth_secret_here_min_32_characters
# API_RATE_LIMIT=100
# METRICS_ENABLED=true
# TRACING_ENABLED=true 

# Google auth0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/google/callback


OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# SMTP Configuration for Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-gmail@gmail.com
SMTP_PASSWORD=your-16-character-app-password
FROM_EMAIL=your-gmail@gmail.com
FROM_NAME=YT Clipper
SMTP_USE_TLS=true
SMTP_USE_SSL=false